{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "List All Brought Forward Losses",
    "description": "List All Brought Forward Losses",
    "type": "object",
    "properties": {
        "losses": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Brought Forward Loss ID's",
            "required": ["id"],
            "properties": {
              "id": {
                "description": "The unique identifier of the loss",
                "type": "string",
                "pattern": "^[A-Za-z0-9\\-]{36}$",
                "example": "405d76f9-c42e-464f-affc-4d19b78a750f"
              } 
            }
          }            
        }
    },
    "required": ["losses"]
}