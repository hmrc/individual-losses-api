{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "List All Brought Forward Losses",
    "description": "List All Brought Forward Losses",
    "type": "object",
    "properties": {
        "losses": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Brought Forward Loss ID's",
            "required": ["id", "links"],
            "properties": {
              "id": {
                "description": "The unique identifier of the loss",
                "example": "1cd12860-a4f4-452b-b488-a46ae20280ad",
                "type": "string",
                "pattern": "^[A-Za-z0-9]{36}$"
              },
              "links": {
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "Brought Forward Loss information",
                  "required": ["href", "rel", "method"],
                  "properties": {
                    "href": {
                      "description": "Resource for the loss",
                      "example": "/individuals/{uuid}/income-tax/losses-brought-forward/1cd12860-a4f4-452b-b488-a46ae20280ad",
                      "type": "string"
                    },
                    "rel": {
                      "description": "Relation to the resource",
                      "example": "2017-18",
                      "type": "string"
                    },
                    "method": {
                      "description": "Method to use for the resource",
                      "example": "GET",
                      "type": "string"
                    } 
                  }
                }            
              } 
            }
          }            
        }
    },
    "required": ["losses"]
}