{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List of Brought Forward Losses",
  "description": "List of Brought Forward Losses",
  "type": "object",
  "properties": {
    "losses": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Array of losses",
        "properties": {
          "id": {
            "description": "The unique identifier of the loss",
            "type": "string",
            "pattern": "^[A-Za-z0-9]{15}$",
            "example": "000000123456789"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Array of links",
              "properties": {
                "href": {
                  "description": "The href of the link",
                  "type": "string",
                  "example": "/individuals/{nino}/income-tax/losses-brought-forward/{lossId}"
                },
                "rel": {
                  "description": "The relative name of the link",
                  "type": "string",
                  "enum": ["self"]
                },
                "method": {
                  "description": "The method of the link",
                  "type": "string",
                  "enum": ["GET"]
                }
              },
              "required": ["href", "rel", "method"]
            }
          }
        },
        "required": ["id", "links"]
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Array of links",
        "properties": {
          "href": {
            "description": "The href of the link",
            "type": "string",
            "example": "/individuals/{nino}/income-tax/losses-brought-forward"
          },
          "rel": {
            "description": "The relative name of the link",
            "type": "string",
            "enum": ["self", "create-brought-forward-loss"]
          },
          "method": {
            "description": "The method of the link",
            "type": "string",
            "enum": ["GET", "POST"]
          }
        },
        "required": ["href", "rel", "method"]
      }
    }
  },
  "required": ["losses", "links"]
}