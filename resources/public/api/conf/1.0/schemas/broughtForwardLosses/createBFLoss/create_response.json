{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Create Brought Forward Loss response",
    "description": "Create Brought Forward Loss response",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier of the loss",
        "type": "string",
        "pattern": "^[A-Za-z0-9]{15}$",
        "example": "1234568790ABCDE"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "description": "Array of links",
          "properties": {
            "href": {
              "description": "The href of the link",
              "type": "string",
              "example": "/individuals/{nino}/income-tax/losses-brought-forward/{lossId}"
            },
            "rel": {
              "description": "The relative name of the link",
              "type": "string",
              "enum": ["self", "amend-brought-forward-loss", "delete-brought-forward-loss"]
            },
            "method": {
              "description": "The method of the link",
              "type": "string",
              "enum": ["GET", "POST", "DELETE"]
            }
          },
          "required": ["href", "rel", "method"]
        }
      }
    },
    "required": ["id", "links"]
}